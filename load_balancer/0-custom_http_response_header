#!/usr/bin/env bash
# Install Nginx and ensure every HTTP response includes X-Served-By=$hostname (Ubuntu 16.04-safe, idempotent)

set -euo pipefail
export DEBIAN_FRONTEND=noninteractive

# 1) Install nginx
apt-get update -y
apt-get install -y nginx

# 2) Overwrite the default site so the header is guaranteed on a stock 16.04 layout
#    Use Nginx's $hostname and 'always' so 2xx/3xx/4xx/5xx include it.
cat >/etc/nginx/sites-available/default <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    add_header X-Served-By $hostname always;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# 3) Validate & reload (works on old/new Ubuntu)
nginx -t
if command -v systemctl >/dev/null 2>&1; then
  systemctl reload nginx
else
  service nginx reload
fi

