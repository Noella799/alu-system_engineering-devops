#!/usr/bin/env bash
# Install and configure HAProxy load balancer with roundrobin algorithm

# Update packages and install HAProxy
apt-get update -y
apt-get install haproxy -y

# Configure HAProxy
cat > /etc/haproxy/haproxy.cfg << 'EOF'
global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms
    option forwardfor

frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend http_back

backend http_back
    balance roundrobin
    server 6901-web-01 13.218.25.33:80 check
    server 6901-web-02 127.0.0.1:80 check
EOF

# Enable HAProxy to start at boot
systemctl enable haproxy

# Start HAProxy
systemctl start haproxy

# Check HAProxy status
systemctl status haproxy
